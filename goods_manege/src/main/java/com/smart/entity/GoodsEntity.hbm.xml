<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.smart.entity.GoodsEntity" table="goods" schema="goods_base">
        <id name="id">
            <column name="id" sql-type="char(32)" length="32"/>
        </id>
        <property name="goodsName">
            <column name="goods_name" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="goodsCategoryId">
            <column name="goods_category_id" sql-type="char(32)" length="32"/>
        </property>
        <property name="goodsImagesUrl">
            <column name="goods_images_url" sql-type="varchar(64)" length="64"/>
        </property>
        <property name="goodsDescription">
            <column name="goods_description" sql-type="varchar(255)"/>
        </property>
        <property name="goodsDetail">
            <column name="goods_detail" sql-type="varchar(255)"/>
        </property>
        <property name="goodsTypeId">
            <column name="goods_type_id" sql-type="varchar(255)"/>
        </property>
        <property name="goodsEvaluationId">
            <column name="goods_evaluation_id" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>